<%= simple_form_for(@test_run) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :autostart, hint: 'Whether the test run should be started automagically by the cron job' %>
    <%= f.input :config, input_html: {class: 'input-block-level', cols: 200, rows: 50} %>
  </div>

  <h3>Scenarios</h3>
  <div id="scenarios" class="test-run-scenarios">

    <%= f.simple_fields_for :scenarios do |s| %>

      <%= render 'scenario_fields', f: s %>

    <% end %>

    <div class="links">
      <%= link_to_add_association 'Add custom scenario', f, :scenarios, class: 'btn btn-primary' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
