<%= simple_form_for(@machine) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :host %>
    <%= f.input :profile %>
    <%= f.input :state %>
    <%= f.input :private_key %>
    <%= f.input :additional_info %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
