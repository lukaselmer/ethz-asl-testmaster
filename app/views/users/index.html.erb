<h3>Users</h3>
<table class="table">
  <thead>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: 'btn btn-mini' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-mini' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini' unless user == current_user %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

